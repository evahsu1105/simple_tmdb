<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_no_logo_android"
    android:paddingLeft="@dimen/listitem_message_first_icon_margin_left"
    android:paddingRight="@dimen/listitem_message_first_icon_margin_left"
    android:paddingTop="@dimen/message_unread_title_margin_top"
    android:paddingBottom="@dimen/message_unread_title_margin_top"
    tools:context="evahsu.simplemovieapi.ui.MovieDetailActivity">

    <ImageView
        android:id="@+id/movie_detail_img"
        android:layout_width="@dimen/detail_movie_img_width"
        android:layout_height="@dimen/detail_movie_img_heigh"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/message_unread_title_margin_top"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:layout_marginBottom="@dimen/message_unread_title_margin_top"
        />
    <TextView
        android:id="@+id/movie_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/movie_detail_img"
        style="@style/ListItemText12Style"/>
    <evahsu.simplemovieapi.uicomponent.flowtag.FlowTagLayout
        android:id="@+id/movie_detail_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:layout_toRightOf="@+id/movie_detail_img"
        android:layout_below="@+id/movie_detail_title">

    </evahsu.simplemovieapi.uicomponent.flowtag.FlowTagLayout>
    <TextView
        android:id="@+id/movie_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/movie_detail_img"
        android:layout_below="@+id/movie_detail_genres"
        style="@style/ListItemText12Style"/>
    <TextView
        android:id="@+id/movie_detail_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/movie_detail_img"
        android:layout_below="@+id/movie_detail_date"
        style="@style/ListItemText12Style"/>
    <TextView
        android:id="@+id/movie_detail_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/movie_detail_img"
        android:layout_below="@+id/movie_detail_runtime"
        style="@style/ListItemText12Style"/>

    <ImageView
        android:id="@+id/state_block1_oil_gray_line"
        android:layout_width="@dimen/state_oil_line_width"
        android:layout_height="@dimen/state_oil_line_height"
        android:layout_below="@+id/movie_detail_runtime"
        android:layout_toRightOf="@+id/movie_detail_vote_average"
        android:layout_marginLeft="@dimen/state_oil_text_margin_left"
        android:src="@drawable/state_gray_line"
        android:layout_marginTop="@dimen/state_oil_line_margin_top"/>
    <ImageView
        android:id="@+id/state_block1_oil_green_line_whole"
        android:visibility="gone"
        android:layout_width="@dimen/state_oil_line_width"
        android:layout_height="@dimen/state_oil_line_height"
        android:layout_below="@+id/movie_detail_runtime"
        android:layout_toRightOf="@+id/movie_detail_vote_average"
        android:layout_marginLeft="@dimen/state_oil_text_margin_left"
        android:src="@drawable/state_green_line_whole"
        android:layout_marginTop="@dimen/state_oil_line_margin_top"/>
    <ImageView
        android:id="@+id/state_block1_oil_green_line"
        android:layout_width="@dimen/state_oil_line_width"
        android:layout_height="@dimen/state_oil_line_height"
        android:layout_below="@+id/movie_detail_runtime"
        android:layout_toRightOf="@+id/movie_detail_vote_average"
        android:layout_marginLeft="@dimen/state_oil_text_margin_left"
        android:src="@drawable/state_green_line"
        android:layout_marginTop="@dimen/state_oil_line_margin_top"/>

    <TextView
        android:id="@+id/movie_detail_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:layout_below="@+id/movie_detail_img"
        style="@style/ListItemText12Style"/>

    <TextView
        android:id="@+id/movie_detail_cast_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:layout_below="@+id/movie_detail_overview"
        style="@style/ListItemText12Style"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_detail_cast_list"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/message_unread_title_margin_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/movie_detail_cast_label">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
